    </GridLayout>
    <Button
        android:id="@+id/close"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/closepopup"
        android:layout_margin="7dp"
        android:layout_gravity="center"/>
</LinearLayout>