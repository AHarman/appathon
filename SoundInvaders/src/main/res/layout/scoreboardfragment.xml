        tools:ignore="NewApi"
        android:columnCount="2"
        android:rowCount="10">

        <TextView
            android:id="@+id/scoreName0"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_margin="7dp"/>
